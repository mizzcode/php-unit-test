{
    "name": "mizz/belajar-php-unit-test",
    "description": "Belajar PHP Unit Test",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Mizz\\Test\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mizz\\Test\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Mizz Code",
            "email": "mizzc0d3@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "9.5.27"
    },
    "scripts": {
        "tests" : "phpunit --configuration phpunit.xml",
        "tests:counter" : "phpunit --configuration phpunit.xml --testsuite counter",
        "tests:produk" : "phpunit --configuration phpunit.xml --testsuite produk"
    }
}